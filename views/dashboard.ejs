    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
      >
        <h1 class="h2">Dashboard</h1>
        
      </div>

      <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

      <h2>Section title</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Ngày</th>
              <th scope="col">Giờ</th>
              <th scope="col">Đội 1</th>
              <th scope="col">Đội 2</th>
              <th scope="col">Tỉ lệ 1</th>
              <th scope="col">Tỉ lệ 2</th>
              <th scope="col">Vào 1</th>
              <th scope="col">Vào 2</th>
            </tr>
          </thead>
          <tbody>
   <%matchTable.forEach(function(item){matchday = item.matchday.toISOString().split('T')[0];%>
    
    <tr>
      <form action="/order" method="post">
      <input type="hidden" name="matchid" value="<%=item._id%>">
      <input type="hidden" name="userId" value="<%=userId%>">
      
      <td> <%=matchday%> </td>
      <td> <%=item.matchtime%> </td>
      <td> <%=item.country1%> </td>
      <td> <%=item.country2%> </td>
      <td> <%=item.rate1%> </td>
      <td> <%=item.rate2%> </td>
      <td> <input type="number" name="order1" id="order1" placeholder=""> </td>
      <td> <input type="number" name="order2" id="order2" placeholder=""> </td>
      <td> <button type="submit">Vào</button> </td>
      <%= userOrder.findIndex(x => x.match === item._id);%>
      <!-- <%=userOrder[0]%> -->
    </tr>
  </form>
  <%})%>
      <%=userOrder %>
           
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

